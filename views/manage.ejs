  <script>
    const loadingBar = document.getElementById('loading-bar3');
    const pageContent = document.getElementById('page-content3');
    const footer=document.getElementsByClassName("footer");
   


    
    // Simulate loading process
    let progress = 0;
    const intervalId = setInterval(() => {
      progress += 10; 
      loadingBar.style.width = progress + '%'; 
      
      footer[0].style.display="none";
      // Check if loading is complete
      if (progress >= 100) {
        clearInterval(intervalId); // Stop the interval
        setTimeout(() => {
          loadingBar.style.display = 'none';
          pageContent.style.display = 'block';
          footer[0].style.display="block";
         
        }, 500); 
      }
    }, 0); 
    const Schedulebtn= document.getElementById("Schedulebtn")
    const form2= document.getElementById("manage-form2");
    Schedulebtn.addEventListener("click",function(){
    form2.classList.add("ani-manage")
    
    })
    document.addEventListener("DOMContentLoaded", function() {
  const getLocationBtn = document.getElementById("getLocationBtn");
  const coordinatesInput = document.getElementById("coordinates");
  
  getLocationBtn.addEventListener("click", function() {
    // Check if geolocation is supported by the browser
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        const coordinates = `${latitude}, ${longitude}`;
        coordinatesInput.value = coordinates;
      }, function(error) {
        console.error("Error getting location:", error.message);
      });
    } else {
      console.error("Geolocation is not supported by this browser.");
    }
  });
});
  </script>
