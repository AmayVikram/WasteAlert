      <div class="row">
        <div class="col-lg-6">
          <div class="res-head">
          <h1>Your  Alert Score is:</h1>
          <h1><%= alertscore %>
          <p style="text-align: center;"><%= rstring %> <p>
        
        </div>
      </div>
        <div class="col-lg-6">
          <div class="chart" style="width:80%;">
            <canvas id="myChart" style="background-color:aliceblue;"></canvas>
